{
  "manifest_version": 2,
  "name": "Kagimori",
  "version": "1.0.0",
  "description": "Adds a solid red border to all webpages matching mozilla.org.",
  "icons": {
    "48": "icons/1x/baseline_vpn_key_black_48dp.png",
    "96": "icons/2x/baseline_vpn_key_black_48dp.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/2x/baseline_vpn_key_black_48dp.png",
    "default_title": "Kagimori",
    "default_popup": "static/main.html"
  }
}
